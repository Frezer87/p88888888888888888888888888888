<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context=".DoubleElimComput8LoVsWin">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="700dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/notifi_8_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Enter player/team names:"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/name8_1"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 1"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/name8_2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 2 "
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/name8_3"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 3"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/name8_4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 4"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/name8_5"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 5 "
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/name8_6"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 6"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/name8_7"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 7"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/name8_8"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 8"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/goToQuarterFinal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sheplogin"
            android:text="next"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>


    </LinearLayout>
</RelativeLayout>


