<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    tools:context=".DoubleElimCoput4LosVsWin">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="700dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/notification1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="50dp"
            android:textSize="20dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Enter player/team names:"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/name1"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player 0ne"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/name2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@android:color/white"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Player two"
            android:inputType="textPersonName" />
        <Button
            android:id="@+id/goToFinal"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/sheplogin"
            android:text="next"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

    </LinearLayout>
</RelativeLayout>







